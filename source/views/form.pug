extends ../pug/layout

block title
  title Погнали - направления

block pixel-glass
  style.
    html {
      background-repeat: no-repeat;
      background-position: 50% 0;
      background-image: url("img/pognali-form-mobile-modals.jpg");
    }

    /* Tablet */
    @media (min-width: 768px) {
      html {
        background-image: url("img/pognali-form-tablet-modals.jpg");
      }
    }

    /* Desktop */
    @media (min-width: 1440px) {
      html {
        background-image: url("img/pognali-form-desktop-modals.jpg");
      }
    }

block content
  main
    include ../blocks/site-title/site-title
    +site-title({title: 'Направления'})
