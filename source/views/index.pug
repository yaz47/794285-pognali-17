extends ../pug/layout

block title
  title Погнали - сервис для путешественников

block pixel-glass
  style.
    html {
      background-repeat: no-repeat;
      background-position: 50% 0;
      background-image: url("img/pixel-glass/pognali-index-mobile-modals.jpg");
    }

    /* Tablet */
    @media (min-width: 768px) {
      html {
        background-image: url("img/pixel-glass/pognali-index-tablet-modals.jpg");
      }
    }

    /* Desktop */
    @media (min-width: 1440px) {
      html {
        background-image: url("img/pixel-glass/pognali-index-desktop-modals.jpg");
      }
    }
