section(class='filter')
  div(class='filter__container container')
    h2(class='filter__title') Фильтрация по странам
    ul(class='filter__continent-list')
      li(class='filter__continent-item')
        a(class='filter__continent-link') Европа
      li(class='filter__continent-item')
        a(class='filter__continent-link') Азия
      li(class='filter__continent-item')
        a(class='filter__continent-link') Америка
      li(class='filter__continent-item')
        a(class='filter__continent-link') Острова
    button(class='filter__collapse' type='button'
        data-closed='Показать все' data-opened='Свернуть' aria-label='Открыть/закрыть меню фильтрации по странам')
    div(class='filter__internal')
      table(class='filter__table')
          -
            const letters = [
              ['a', 'б', 'в', 'г', 'д'],
              ['е', 'ё', 'ж', 'з', 'и'],
              ['й', 'к', 'л', 'м', 'н'],
              ['о', 'п', 'р', 'с', 'т'],
              ['у', 'ф', 'х', 'ц', 'ч'],
              ['ш', 'щ', 'э', 'ю', 'я']
            ];
          for letterRow in letters
            tr(class='filter__table-row')
              for letter in letterRow
                td(class='filter__table-cell')
                  a(class='filter__table-link' href='#')= letter
      ol(class='filter__group-list')
